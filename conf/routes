# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~


GET     /                           @controllers.Application.index

# Single endpoint for serving AngularJS
GET     /main                      @controllers.Application.main
# Single endpoint for XML services
GET     /req                        @controllers.Application.makereq
POST    /hello                      @controllers.Application.sayHello

GET     /LogReq                     @controllers.Application.MakeLogReq(reqtype: String ?= "Log")
POST    /LogService                 @controllers.Application.MakeLogRes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               @controllers.Assets.versioned(path="/public", file: Asset)

# DB methods
POST    /insert/log                 @controllers.Application.insertLog(reqtype: String ?= "Log")